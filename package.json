{
  "name": "unified-deploy-config",
  "version": "1.1.0",
  "description": "Unified configuration management for multi-environment deployments",
  "type": "module",
  "main": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "bin": {
    "udc": "./dist/esm/cli.js"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "config",
    "configuration",
    "deploy",
    "terraform",
    "github-actions",
    "json5",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omnidecimal/unified-deploy-config.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc && pnpm run build:bundles",
    "build:bundles": "node esbuild.config.mjs",
    "build:gha": "node esbuild.config.mjs --gha",
    "build:cli": "node esbuild.config.mjs --cli",
    "build:cjslib": "node esbuild.config.mjs --cjslib",
    "test": "pnpm run build && vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "packageManager": "pnpm@10.26.2",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "commander": "^14.0.2",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}

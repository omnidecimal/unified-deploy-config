{
  "name": "unified-deploy-config",
  "version": "1.0.0",
  "main": "index.js",
  "bin": {
    "unified-deploy-config": "./merge-config.js"
  },
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "pnpm run build:gha && pnpm run build:terraform",
    "build:gha": "ncc build action/index.js -m -o action/dist --no-source-map-register",
    "build:terraform": "ncc build merge-config.js -o terraform/merge_config/dist -m --no-source-map-register",
    "build:package": "ncc build merge-config.js -o dist -m --no-source-map-register"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "commander": "^14.0.2",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.3",
    "jest": "^29.7.0"
  }
}
